---
import Layout from "../layouts/Layout.astro";
---

<Layout>
      <p class="flex text-xl sm:text-xl md:text-xl text-left mb-5 mt-1">
       fordide
      </p>

      <div class="flex justify-center mx-auto sm:px-6 md:px-8 pt-2">
        <img
          class="w-full max-w-4xl sm:max-w-5xl md:max-w-6xl object-cover rounded-lg"
          src="/Billeder/delopgave2.svg"
          alt="Forside billede"
        />
      </div>
    </div>
    <div class="flex justify-center pt-1 my-5">
      <hr class="w-4/5 lg:w-1/3 opacity-50" />
    </div>

    <div class="relative max-w-6xl mx-auto sm:p-5 md:p-7 p-4">
      <p class="text-left text-sm sm:text-base md:text-lg mt-0 mb-6">
       !
      </p>

      <div
        class="bg-[#DFE3DC] rounded-lg overflow-hidden p-5 inset-shadow-sm inset-shadow-lime-950 flex flex-col md:flex-row items-center justify-between gap-6"
      >
        <div
          class="w-full sm:w-150 md:w-82 lg:w-150 h-60 sm:h-72 md:h-80 rounded-lg overflow-hidden sm:px-0"
        >
          <video
            src=""
            autoplay
            loop
            muted
            playsinline
            class="w-full h-full object-cover"></video>
        </div>

        <!-- tekst og knapper -->
        <div class="max-w-xl text-center md:text-left lg:text-left">
          <h2 class="text-xl p-4 sm:text-2xl font-bold lg:mb-25 mb-8 lg:pl-4">
            hh
          </h2>

          <h3 class="text-base p-4 sm:text-lg font-bold lg:pl-4">
            Fhh
          </h3>

          <div
            class="flex justify-center p-4 lg:justify-start lg:space-x-9 lg:pl-15 space-x-2"
          >
            <a
              href="/spil"
              class="w-30 py-4 border-2 rounded-lg font-bold hover:bg-lime-50 transition text-center"
              >Sh</a
            >
            <a
              href="/2spil"
              class="w-30 py-4 border-2 rounded-lg font-bold hover:bg-lime-50 transition text-center"
              >Vaht</a
            >
            <a
              href="/3spil"
              class="w-30 py-4 border-2 rounded-lg font-bold hover:bg-lime-50 transition text-center"
              >hn</a
            >
          </div>
        </div>
      </div>
    </div>
  </div>

  <!-- Popup box placeret her -->
  <div
    id="popup-box"
    class="absolute bg-[#DFE3DC] text-[#293C1F] p-2 md:p-4 rounded-lg max-w-[90vw] md:max-w-md hidden z-50 inset-shadow-sm inset-shadow-lime-950"
  >
  </div>
</Layout>
