---
import "../styles/global.css";
---

<!doctype html>
<html lang="en">
  <head>
    <meta charset="UTF-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <link rel="icon" type="image/svg+xml" href="/Billeder/rackarackalogo.svg" />
    <meta name="generator" content={Astro.generator} />
    <title>Rackarack</title>
  </head>

  <body 
    style="background-color: #272425;"
    class="min-h-screen flex flex-col text-white"
  >
    <!-- Header øverst -->
    <div
      class="relative flex flex-col items-center bg-black p-4 sm:p-6 rounded-xl z-20 mx-3 mt-5"
    >
      <!-- Tekst øverst -->
      <img
  src="/Billeder/rackarackatekst.svg"
  alt="Rackaracka tekst"
  class="object-contain w-full
         h-24 sm:h-28 md:h-36 lg:h-40 xl:h-48"
  style="transform: scaleX(2.5); transform-origin: center;"
/>

      <!-- Logo under teksten -->
      <img
        src="/Billeder/rackarackalogo.svg"
        alt="Logo1"
        class="w-28 object-contain"
      />
    </div>

    <!-- Baggrundssektion -->
    <div class="bg-[#6F6E70] mt-3 p-5 md:p-3 min-h-[100vh] flex flex-col items-center justify-start">
      
      <!-- Navigation -->
      <nav class="bg-[#272425] text-[#d92727] flex flex-wrap justify-center gap-6 sm:gap-10 py-4 px-5 rounded-xl shadow-lg uppercase tracking-widest font-semibold w-full "
        style="text-shadow: 2px 2px 0 #000, -2px -2px 0 #000, 2px -2px 0 #000, -2px 2px 0 #000, 2px 0 0 #000, -2px 0 0 #000, 0 2px 0 #000, 0 -2px 0 #000;">
        <a href="/" class="hover:text-yellow-500 transform transition duration-300 hover:scale-110">Frontpage</a>
        <a href="/merch" class="hover:text-yellow-500 transform transition duration-300 hover:scale-110">Merch</a>
        <a href="/events" class="hover:text-yellow-500 transform transition duration-300 hover:scale-110">Events</a>
        <a href="/about" class="hover:text-yellow-500 transform transition duration-300 hover:scale-110">About us</a>
        <a href="/contact" class="hover:text-yellow-500 transform transition duration-300 hover:scale-110">Contact</a>
      </nav>

      <!-- Indhold -->
      <main class="flex-grow mt-6 w-full max-w-5xl text-center sm:text-left">
        <slot />
      </main>
    </div>
  </body>
</html>
